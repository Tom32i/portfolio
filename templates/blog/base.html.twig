{% extends 'base.html.twig' %}

{% block body_class 'blog' %}

{% block javascripts %}
    {% for file in encore_entry_js_files('blog') %}
        <script src="{{ asset(file) }}" async></script>
    {% endfor %}
{% endblock %}

{% block body %}
