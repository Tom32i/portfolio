{% extends 'blog/base.html.twig' %}

{% use 'blog/blocks.html.twig' %}

{% block content %}
    <article lang="{{ article.language }}">
        <header>
            <h1>{{ article.title }}</h1>
            {{ block('date') }}
        </header>
        <div class="article-content">
            {{ article.content|raw }}
        </div>
    </article>
{% endblock %}
